{
  "name": "inkdown",
  "version": "2.0.0",
  "description": "A writing tool and chat bot fully compatible with markdown",
  "main": "./out/main/index.js",
  "author": "1943time",
  "license": "AGPL-3.0",
  "homepage": "https://github.com/1943time/inkdown",
  "scripts": {
    "format": "prettier --write .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev -w",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps && electron-rebuild -f -w better-sqlite3",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win:x64": "npm run build && electron-builder --win --x64 --config",
    "build:win:arm64": "npm run build && electron-builder --win --arm64 --config",
    "build:mac:x64": "npm run build && electron-builder --mac --x64 --config",
    "build:mac:arm64": "npm run build && electron-builder --mac --arm64 --config",
    "build:linux": "electron-vite build && electron-builder --linux --config",
    "postpack": "electron-rebuild -f -w better-sqlite3",
    "build:test": "electron-builder --mac --arm64 --config",
    "build:parser": "node src/renderer/src/editor/parser/worker/compiler.js"
  },
  "dependencies": {
