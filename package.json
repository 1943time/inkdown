{
  "name": "bluestone",
  "version": "0.21.2",
  "description": "",
  "main": "./out/main/index.js",
  "license": "AGPL-3.0",
  "author": "1943time",
  "homepage": "https://github.com/1943time/bluestone",
  "scripts": {
    "format": "prettier --write .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev -w",
    "prebuild": "node src/renderer/src/editor/parser/worker/compiler.js",
    "build": "npm run prebuild && npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "electron-builder --win --arm64 --x64 --config",
    "build:mac": "electron-builder --macos --config",
    "build:mas": "npm run build && electron-builder --macos --config mas-builder.yml",
    "build:linux": "electron-builder --linux --arm64 --x64 --config",
    "unpackage": "rm -rf unpackage && asar extract dist/mac-arm64/bluestone.app/Contents/Resources/app.asar ./unpackage",
    "buildapp": "npm run build && npm run build:mac && npm run build:win"
  },
  "dependencies": {
