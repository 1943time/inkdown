{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": ["electron.vite.config.*", "src/main/**/*", "src/preload/**/*", "src/types/*.d.ts"],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "noImplicitReturns": false,
    "moduleResolution": "bundler",
    "paths": {
      "types/*": ["./src/types/*"]
    }
  }
}
